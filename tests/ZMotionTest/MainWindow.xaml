<Window
    x:Class="ZMotionTest.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ZMotionTest"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ZMotion 运动控制器测试工具"
    Width="1400"
    Height="900"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    TextElement.FontSize="13"
    TextElement.FontWeight="Regular"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    TextOptions.TextFormattingMode="Ideal"
    TextOptions.TextRenderingMode="Auto"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!--  标题栏  -->
            <materialDesign:ColorZone
                Grid.Row="0"
                Padding="16"
                Mode="PrimaryMid">
                <TextBlock
                    Foreground="White"
                    Style="{DynamicResource MaterialDesignHeadline5TextBlock}"
                    Text="ZMotion 运动控制器测试工具" />
            </materialDesign:ColorZone>

            <!--  主要内容区域  -->
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="200" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!--  导航菜单  -->
                <materialDesign:Card Grid.Column="0" Margin="16,16,8,16">
                    <StackPanel>
                        <TextBlock
                            Margin="16,16,16,8"
                            HorizontalAlignment="Center"
                            Style="{DynamicResource MaterialDesignHeadline6TextBlock}"
                            Text="功能菜单" />

                        <Separator Margin="8,0" />

                        <Button
                            x:Name="ConnectionButton"
                            Margin="8,4"
                            HorizontalAlignment="Stretch"
                            Click="NavigateToPage"
                            Content="连接管理"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Tag="Connection" />

                        <Button
                            x:Name="AxisMonitorButton"
                            Margin="8,4"
                            HorizontalAlignment="Stretch"
                            Click="NavigateToPage"
                            Content="轴状态监控"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Tag="AxisMonitor" />

                        <Button
                            x:Name="AxisControlButton"
                            Margin="8,4"
                            HorizontalAlignment="Stretch"
                            Click="NavigateToPage"
                            Content="轴运动控制"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Tag="AxisControl" />

                        <Button
                            x:Name="IOControlButton"
                            Margin="8,4"
                            HorizontalAlignment="Stretch"
                            Click="NavigateToPage"
                            Content="IO控制"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Tag="IOControl" />

                        <Button
                            x:Name="ParameterTestButton"
                            Margin="8,4"
                            HorizontalAlignment="Stretch"
                            Click="NavigateToPage"
                            Content="参数测试"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Tag="ParameterTest" />

                        <Button
                            x:Name="MotionBufferButton"
                            Margin="8,4"
                            HorizontalAlignment="Stretch"
                            Click="NavigateToPage"
                            Content="运动缓存测试"
                            Style="{DynamicResource MaterialDesignFlatButton}"
                            Tag="MotionBuffer" />
                    </StackPanel>
                </materialDesign:Card>

                <!--  页面内容区域  -->
                <materialDesign:Card Grid.Column="1" Margin="8,16,16,16">
                    <Frame x:Name="ContentFrame" NavigationUIVisibility="Hidden" />
                </materialDesign:Card>
            </Grid>

            <!--  状态栏  -->
            <materialDesign:ColorZone
                Grid.Row="2"
                Padding="16,8"
                Mode="PrimaryLight">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>

                    <!--  连接状态  -->
                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                        <materialDesign:PackIcon
                            x:Name="ConnectionIcon"
                            Width="16"
                            Height="16"
                            Margin="0,0,8,0"
                            VerticalAlignment="Center"
                            Foreground="{Binding ConnectionIconColor}"
                            Kind="{Binding ConnectionIconKind}" />
                        <TextBlock
                            x:Name="ConnectionStatusText"
                            VerticalAlignment="Center"
                            FontWeight="Medium"
                            Foreground="{Binding ConnectionStatusColor}"
                            Text="{Binding ConnectionStatus}" />
                    </StackPanel>

                    <TextBlock
                        x:Name="StatusText"
                        Grid.Column="1"
                        Margin="16,0"
                        VerticalAlignment="Center"
                        Text="{Binding StatusText}" />

                    <TextBlock
                        x:Name="TimeText"
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Text="{Binding TimeText}" />
                </Grid>
            </materialDesign:ColorZone>
        </Grid>
    </materialDesign:DialogHost>
</Window>
